# Factur-X Express Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://facturx:password@localhost:5432/facturx_db
POSTGRES_USER=facturx
POSTGRES_PASSWORD=password
POSTGRES_DB=facturx_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
API_DEBUG=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Factur-X Configuration
FACTURX_PROFILE=BASIC
FACTURX_VALIDATION_ENABLED=true
VERAPDF_PATH=/usr/local/bin/verapdf
MUSTANG_PATH=/usr/local/bin/mustang

# File Storage
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Security
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
ALLOWED_HOSTS=localhost,127.0.0.1

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=

# Production Settings (Oracle VPS)
# DOMAIN=your-domain.com
# SSL_CERT_PATH=/etc/ssl/certs/
# SSL_KEY_PATH=/etc/ssl/private/
# POSTGRES_HOST=postgres
